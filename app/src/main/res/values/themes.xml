<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    Todo: Reference images (wallpaper flare)-->
    <!-- Base application theme. -->
    <style name="Theme.GeoSphere" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/geosphere_blue_dark</item>
        <item name="colorPrimaryVariant">@color/geosphere_blue_light</item>
        <item name="colorOnPrimary">@color/geosphere_blue_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/geosphere_blue_dark</item>
        <item name="colorSecondaryVariant">@color/geosphere_blue_light</item>
        <item name="colorOnSecondary">@color/geosphere_blue_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/translucent</item>
        <!-- Customize your theme here. -->


        <item name="android:windowBackground" >@drawable/geosphere_bg_light</item>

        <item name="android:textColorHint">@color/translucent_med</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor" >@color/geosphere_blue_dark</item>

    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/geosphere_blue_light</item>
        <item name="android:background">@color/geosphere_blue_dark</item>
    </style>
</resources>